{
  "name": "server",
  "version": "1.0.0",
  "description": "Backend para el Kanban Board con autenticaci√≥n JWT y Sequelize",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npx tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "npx nodemon src/server.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed": "npx sequelize-cli db:seed:all",
    "migrate": "npx sequelize-cli db:migrate",
    "rollback": "npx sequelize-cli db:migrate:undo",
    "reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate && npm run seed"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json,js",
    "exec": "npx tsc && node dist/server.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.13.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.7",
    "nodemon": "^3.1.9",
    "sequelize-cli": "^6.6.2",
    "typescript": "^5.7.3"
  },
  "keywords": [
    "kanban",
    "jwt",
    "express",
    "sequelize",
    "typescript"
  ],
  "author": "Tu Nombre",
  "license": "ISC"
}
